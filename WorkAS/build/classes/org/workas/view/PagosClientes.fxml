<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #1e1e1e;" stylesheets="@../style/mainmenucliente.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.workas.controller.MainMenuClienteController">
    <children>
        <Circle fill="#c62828" layoutX="125.0" layoutY="47.0" radius="39.0" stroke="BLACK" strokeType="INSIDE" />
        <Label layoutX="-3.0" layoutY="221.0" prefHeight="427.0" prefWidth="256.0" styleClass="label-main" />
        <VBox alignment="TOP_CENTER" layoutX="-1.0" layoutY="-4.0" prefHeight="652.0" prefWidth="250.0" spacing="30.0">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/UserCliente.png" />
                    </image>
                </ImageView>
                <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Nombre del Cliente" />
                <Label style="-fx-text-fill: #cfcfcf; -fx-font-size: 12px;" text="correo@cliente.com" />
                <Separator />
                <Button styleClass="btn-rojo" text="Inicio" />
                <Button styleClass="btn-rojo" text="Mis Proyectos" />
                <Button styleClass="btn-rojo" text="Pagos" />
                <Button styleClass="btn-rojo" text="Facturas" />
                <Separator />
                <Button fx:id="btnCerrarSesion" onAction="#clicManejoEvento" styleClass="btn-rojo" text="Cerrar Sesión" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
        <Separator layoutX="250.0" layoutY="-4.0" orientation="VERTICAL" prefHeight="652.0" prefWidth="0.0" />
        <Label layoutX="249.0" layoutY="-2.0" prefHeight="67.0" prefWidth="750.0" styleClass="label-main" text="Bienvenido a WorkAS - Panel del Cliente" />
        <ImageView fitHeight="114.0" fitWidth="157.0" layoutX="840.0" layoutY="-17.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../image/FondoBlancoFondo.png" />
            </image>
        </ImageView>

        <Text fill="WHITE" layoutX="270.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="panel-box-title" text="Gestión de Pagos" textAlignment="CENTER" wrappingWidth="715.0">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Text>

        <HBox alignment="CENTER_LEFT" layoutX="270.0" layoutY="120.0" prefWidth="715.0" spacing="20.0">
            <children>
                <Button fx:id="btnNuevo" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" style="-fx-background-color: green;" styleClass="btn-crud" text="Nuevo">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/add.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnEliminar" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" style="-fx-background-color: red;" styleClass="btn-crud" text="Eliminar">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/delete.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnEditar" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" style="-fx-background-color: blue;" styleClass="btn-crud" text="Editar">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/edit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <TextField fx:id="txtBuscar" promptText="Buscar pago..." style="-fx-background-color: gray;" styleClass="form-input" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <TableView fx:id="tableViewPagos" layoutX="270.0" layoutY="175.0" prefHeight="230.0" prefWidth="715.0">
            <columns>
                <TableColumn fx:id="colIdPago" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colProyecto" prefWidth="150.0" text="Proyecto" />
                <TableColumn fx:id="colFreelancer" prefWidth="150.0" text="Freelancer" />
                <TableColumn fx:id="colMonto" prefWidth="100.0" text="Monto" />
                <TableColumn fx:id="colFechaPago" prefWidth="120.0" text="Fecha de Pago" />
                <TableColumn fx:id="colMetodoPago" prefWidth="120.0" text="Método" />
                <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" layoutX="270.0" layoutY="590.0" prefWidth="715.0" spacing="20.0">
            <children>
                <Button fx:id="btnGuardar" mnemonicParsing="false" style="-fx-background-color: orange;" styleClass="btn-crud" text="Guardar" />
                <Button fx:id="btnCancelar" mnemonicParsing="false" style="-fx-background-color: red;" styleClass="btn-crud" text="Cancelar" />
            </children>
        </HBox>
      <GridPane hgap="60.0" layoutX="319.0" layoutY="415.0" prefHeight="164.0" prefWidth="663.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField prefHeight="25.0" prefWidth="301.0" promptText="Id pago" style="-fx-background-color: gray; -fx-text-fill: white;" />
            <ComboBox prefWidth="150.0" promptText="Proyecto" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.rowIndex="1" />
            <ComboBox prefWidth="150.0" promptText="Freelancer" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.rowIndex="2" />
            <TextField promptText="Monto" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.columnIndex="1" />
            <DatePicker promptText="FechaPago" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField promptText="Metodo" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <ComboBox layoutX="318.0" layoutY="584.0" prefWidth="150.0" promptText="Estado" style="-fx-background-color: gray; -fx-text-fill: white;" />
    </children>
</AnchorPane>
