<AnchorPane maxHeight="588.0" maxWidth="813.0" prefHeight="588.0" prefWidth="813.0" style="-fx-background-color: #1e1e1e;" stylesheets="@../style/register.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.workas.controller.RegistroClienteController">
    <children>
        <Circle fill="#c62828" layoutX="14.0" layoutY="57.0" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
        
        <!-- Panel izquierdo -->
        <AnchorPane layoutX="49.0" layoutY="36.0" prefHeight="500.0" prefWidth="420.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 15 0 0 15; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.1), 10, 0, 0, 10);" stylesheets="@../style/register.css">         
            <children>
                <Label layoutX="87.0" layoutY="75.0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Regístrate en WorkAS" />
                <VBox layoutX="90.0" layoutY="114.0" prefWidth="250" spacing="15">
                    <TextField fx:id="txtNombre" promptText="Nombre" styleClass="text-field" />
                    <TextField fx:id="txtApellido" promptText="Apellido" styleClass="text-field" />
                    <TextField fx:id="txtEmail" promptText="Correo electrónico" styleClass="text-field" />
                    <PasswordField fx:id="txtContraseña" promptText="Contraseña" styleClass="password-field" />
                    <TextField fx:id="txtTelefono" promptText="Teléfono" styleClass="text-field" />
                </VBox>
                <Button layoutX="138.0" layoutY="394.0" onAction="#btnRegistrarAction" styleClass="btn-registrar" text="REGISTRAR CLIENTE" />
                <Button fx:id="btnRegresarAInicio" layoutX="153.0" layoutY="443.0" mnemonicParsing="false" onAction="#clicManejoEvento" styleClass="btn-login" text="Regresar a Iniciar Sesión" />
            <ImageView fitHeight="85.0" fitWidth="154.0" layoutX="-1.0" layoutY="-19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/FondoBlancoFondo.png" />
               </image>
            </ImageView>
            </children>
        </AnchorPane>
        
        <!-- Panel derecho -->
        <AnchorPane layoutX="469.0" layoutY="36.0" prefHeight="500.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 0 15 15 0; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.1), 10, 0, 0, 10);">     
            <children>
                <VBox alignment="CENTER" layoutX="0.0" layoutY="140.0" prefWidth="300.0" spacing="15">
                    <Label style="-fx-text-fill: #1e1e1e; -fx-font-size: 22px; -fx-font-weight: bold;" text="¡Bienvenido Cliente!" />
