<AnchorPane maxHeight="650.0" prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #1e1e1e;" stylesheets="@../style/mainmenucliente.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.workas.controller.MainMenuProyectosController">
    <children>
        <Circle fill="#c62828" layoutX="134.0" layoutY="56.0" radius="40.0" stroke="BLACK" strokeType="INSIDE" />

        <Label layoutX="258.0" layoutY="-2.0" prefHeight="67.0" prefWidth="741.0" styleClass="label-main" text="Bienvenido a WorkAS - Panel de Administración" />
        <ImageView fitHeight="114.0" fitWidth="157.0" layoutX="840.0" layoutY="-17.0" pickOnBounds="true" preserveRatio="true">
            <image><Image url="@../image/FondoBlancoFondo.png" /></image>
        </ImageView>
        <Separator layoutX="250.0" layoutY="-4.0" orientation="VERTICAL" prefHeight="660.0" prefWidth="20.0" />

        <Text fill="WHITE" layoutX="270.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestión de Proyectos" textAlignment="CENTER" wrappingWidth="715.0">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Text>

        <HBox alignment="CENTER_LEFT" layoutX="270.0" layoutY="120.0" prefWidth="715.0" spacing="15.0">
            <children>
                <Button fx:id="btnNuevo" mnemonicParsing="false" style="-fx-background-color: green; -fx-text-fill: white;" styleClass="btn-crud" text="Nuevo">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../image/add.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnEliminar" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" styleClass="btn-crud" text="Eliminar">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../image/delete.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnEditar" mnemonicParsing="false" style="-fx-background-color: blue; -fx-text-fill: white;" styleClass="btn-crud" text="Editar">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../image/edit.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
                <TextField fx:id="txtBuscar" promptText="Buscar por..." style="-fx-background-color: gray; -fx-text-fill: white;" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <TableView fx:id="tableViewProyectos" layoutX="270.0" layoutY="175.0" prefHeight="200.0" prefWidth="715.0">
            <columns>
                <TableColumn fx:id="colIdProyecto" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="colTitulo" prefWidth="120.0" text="Título" />
                <TableColumn fx:id="colIdCategoria" prefWidth="70.0" text="ID Cat." />
                <TableColumn fx:id="colIdCliente" prefWidth="70.0" text="ID Cli." />
                <TableColumn fx:id="colIdFreelancer" prefWidth="70.0" text="ID Free." />
                <TableColumn fx:id="colPresupuesto" prefWidth="90.0" text="Presupuesto" />
                <TableColumn fx:id="colMontoAcordado" prefWidth="90.0" text="Acordado" />
                <TableColumn fx:id="colEstado" prefWidth="90.0" text="Estado" />
                <TableColumn fx:id="colFechaEntrega" prefWidth="100.0" text="Fecha Entrega" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <GridPane hgap="15.0" layoutX="270.0" layoutY="390.0" prefWidth="715.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="txtIdProyecto" editable="false" promptText="ID Proyecto" style="-fx-background-color: gray; -fx-text-fill: white;" />
                <TextField fx:id="txtTitulo" promptText="Título del Proyecto" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                <ComboBox fx:id="cmbCategoria" prefWidth="Infinity" promptText="Categoría" style="-fx-background-color: gray;" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbCliente" prefWidth="Infinity" promptText="Cliente" style="-fx-background-color: gray;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbFreelancer" prefWidth="Infinity" promptText="Freelancer (Opcional)" style="-fx-background-color: gray;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="txtPresupuesto" promptText="Presupuesto" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.rowIndex="2" />
                <TextField fx:id="txtMontoAcordado" promptText="Monto Acordado" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <ComboBox fx:id="cmbEstado" prefWidth="Infinity" promptText="Estado" style="-fx-background-color: gray;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <DatePicker fx:id="dpFechaEntrega" prefWidth="Infinity" promptText="Fecha de Entrega" style="-fx-control-inner-background: gray;" GridPane.rowIndex="3" />
                <TextField fx:id="txtFechaCreacion" editable="false" promptText="Fecha de Creación" style="-fx-background-color: gray; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextArea fx:id="txtDescripcion" prefHeight="200.0" prefWidth="200.0" promptText="Descripción detallada del proyecto..." style="-fx-control-inner-background: gray; -fx-text-fill: white;" wrapText="true" GridPane.columnSpan="3" GridPane.rowIndex="4" />
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" layoutX="260.0" layoutY="603.0" prefWidth="715.0" spacing="20.0">
            <children>
                <Button fx:id="btnGuardar" mnemonicParsing="false" style="-fx-background-color: orange; -fx-text-fill: white;" styleClass="btn-crud" text="Guardar " />
                <Button fx:id="btnCancelar" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" styleClass="btn-crud" text="Cancelar" />
            </children>
        </HBox>
        <VBox alignment="TOP_CENTER" layoutX="9.0" layoutY="6.0" prefHeight="650.0" prefWidth="250.0" spacing="25.0">
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/UserCliente.png" />
                    </image>
                </ImageView>
                <Label fx:id="lblNombreUsuario" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Nombre del Usuario" />
                <Label fx:id="lblCorreoUsuario" style="-fx-text-fill: #cfcfcf; -fx-font-size: 12px;" text="correo@usuario.com" />
                <Separator prefHeight="0.0" prefWidth="229.0" />
                <Button onAction="#irAClientes" styleClass="btn-rojo" text="Clientes" />
                <Button onAction="#irAFreelancers" styleClass="btn-rojo" text="FreeLancers" />
                <Button onAction="#irACategorias" styleClass="btn-rojo" text="Categorias De Proyectos" />
                <Button onAction="#irAEntregas" styleClass="btn-rojo" text="Entregas" />
                <Button styleClass="btn-rojo" text="Proyectos" />
                <Separator />
                <Button fx:id="btnCerrarSesion1" onAction="#clicManejoEvento" styleClass="btn-rojo" text="Cerrar Sesión" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
